class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int m = matrix.size(), n = matrix[0].size();
        int i = m - 1, j = 0;
        
        while(i >= 0 and j < n) {
            if(target > matrix[i][j])
                j++;
            
            else if(target < matrix[i][j])
                i--;
            
            else
                return true;
        }
        
        return false;
    }
};
