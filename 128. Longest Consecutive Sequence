class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        if(nums.empty())
            return 0;
        
        set<int> st(nums.begin(), nums.end());
        nums = vector<int>(st.begin(), st.end());
        int ans = 0, c = 1;
        
        for(int i = 0; i < nums.size() - 1; i++) {
            if(nums[i + 1] == nums[i] + 1)
                 c += 1;
            
            else {
                ans = max(c, ans);
                c = 1;
            }
        }
        ans = max(c, ans);
        return ans;
    }
};
