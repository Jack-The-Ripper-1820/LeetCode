class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int curgas = 0, start = 0, totgas = 0;
        
        for(int i = 0; i < gas.length; i++) {
            curgas += gas[i] - cost[i];
            totgas += gas[i] - cost[i];
            
            if(curgas < 0) {
                start = i + 1;
                curgas = 0;
            }
        }
        
        return totgas < 0 ? -1 : start;
    }
}
