class Solution {
public:
    int minOperations(vector<int>& nums, int x) {
        unordered_map<int, int> mp;
        int s = 0, n = nums.size(), ans = 0;
        
        int sum = accumulate(nums.begin(), nums.end(), 0);
        
        if(x > sum) return -1;
        
        if(x == sum) return n;
        
        x = sum - x;
        
        for(int i = 0; i < n; i++) {
            s += nums[i];
            
            if(s == x)
                ans = i + 1;
            
            if(mp.find(s - x) != mp.end())
                ans = max(ans, i - mp[s - x]);
            
            if(mp.find(s) == mp.end())
                mp[s] = i;
        }
        
        return n - ans == n ? -1 : n - ans;
    }
};
