class Solution {
public:
    int minEatingSpeed(vector<int>& piles, int h) {
        int left = 1;
        int right = *max_element(piles.begin(), piles.end());
        
        while(left < right) {
            int mid = (left + right) / 2;
            
            int hneed = 0;
            
            for(int &x : piles)
                hneed += x % mid ? (x / mid) + 1 : x / mid;
            
            if(hneed <= h)
                right = mid;
            
            else
                left = mid + 1;
        }
        
        return left;
    }
};
