//recursive dp
class Solution {
    vector<int> dp;
    int helper(vector<int> const& nums, int ind) {
        if(ind >= nums.size())
            return INT_MAX / 2;
        
        if(ind == nums.size() - 1)
            return 0;
        
        if(dp[ind] != -1)
            return dp[ind];
        
        int ans = INT_MAX / 2;
        for(int i = nums[ind]; i > 0; i--)
            ans = min(ans, helper(nums, ind + i) + 1);
        return dp[ind] = ans;
    }
public:
    int jump(vector<int>& nums) {
        dp = vector<int>(nums.size(), -1);
        return helper(nums, 0);
    }
};

//recursive consise dp
class Solution {
    vector<int> dp;
    int helper(vector<int> &nums, int ind) {
        if(ind >= nums.size() - 1)
            return 0;
        
        if(dp[ind] != -1)
            return dp[ind];
        
        int ans = INT_MAX / 2;
        
        for(int i = 1; i <= nums[ind]; i++)
            ans = min(ans, helper(nums, ind + i) + 1);
        
        return dp[ind] = ans;
    }
public:
    int jump(vector<int>& nums) {
        dp.resize(nums.size(), -1);
        return helper(nums, 0);
    }
};

//iterative dp
class Solution {
public:
    int jump(vector<int>& nums) {
        int n = nums.size();
        vector<int> dp(n, INT_MAX);
        dp[0] = 0;
        
        for(int i = 0; i < n; i++) {
            for(int j = 1; j <= nums[i] and i + j < n; j++)
                dp[i + j] = min(dp[i + j], dp[i] + 1);
        }
        
        return dp[n - 1];
    }
};
