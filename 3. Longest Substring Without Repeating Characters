class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        if(s.empty())
            return 0;
        
        int l = 0, r = 0, ans = 0;
        unordered_set<char> st;
        
        while(r < s.length()) {
            if(st.find(s[r]) == st.end()) {
                st.insert(s[r]);
                ans = max(ans, (int)st.size());
                r += 1;
            }
            
            else {
                st.erase(s[l]);
                l += 1;
            }
        }
        return ans;
    }
};
