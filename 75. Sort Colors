class Solution {
public:
    void sortColors(vector<int>& nums) {
        vector<int> mp(3);
        for(int &i : nums)
            mp[i]++;
        
        int i = 0, j = 0;
        while(i < 3 and j < nums.size()) {
            if(mp[i])
                nums[j] = i, mp[i]--, j++;
            else
                i++;
        }
    }
};
