/*
// Definition for a Node.
class Node {
public:
    int val;
    vector<Node*> children;

    Node() {}

    Node(int _val) {
        val = _val;
    }

    Node(int _val, vector<Node*> _children) {
        val = _val;
        children = _children;
    }
};
*/

class Solution {
public:
    vector<vector<int>> levelOrder(Node* root) {
        if(not root) return {};
        
        vector<vector<int>> ans;
        queue<Node*> q;
        q.push(root);
        
        while(not q.empty()) {
            int s = q.size();
            vector<int> tmp;
            
            while(s--) {
                Node* cur = q.front(); q.pop();
                tmp.push_back(cur->val);
                
                for(Node* node : cur->children)
                    q.push(node);
            }
            
            ans.push_back(tmp);
        }
        
        return ans;
    }
};
