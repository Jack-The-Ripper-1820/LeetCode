class Solution {
    public int candy(int[] grade) {
        int n = grade.length;
        int choc1[] = new int[n], choc2[] = new int[n];
        for(int i = 0; i < n; i++) {
            choc1[i] = 1;
            choc2[i] = 1;
        }
        
        for(int i = 1; i < n; i++) {
            if(grade[i] > grade[i - 1])
                choc1[i] = choc1[i - 1] + 1;
        } 

        for(int i = n - 2; i >= 0; i--) {
            if(grade[i] > grade[i + 1])
                choc2[i] = choc2[i + 1] + 1;
        }

        int ans = 0;
        for(int i = 0; i < n; i++)
            ans += Math.max(choc1[i], choc2[i]);

        return ans;
    }
}
