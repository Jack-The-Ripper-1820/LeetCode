class Solution {
public:
    string getSmallestString(int n, int k) {
        string ans;
        for(int i = 1; i <= n; i++) {
            int rem = n - i;
            for(char c = 'a'; c <= 'z'; c++) {
                if(k - (c - 'a' + 1) <= rem * 26) {
                    k -= (c - 'a' + 1);
                    ans += c;
                    break;
                }
            }
        }
        return ans;
    }
};
